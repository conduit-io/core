{
    "name": "conduit-io/core",
    "description": "Core functionality library for Conduit ecosystem",
    "keywords": ["conduit", "component", "laravel", "microkernel"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Conduit Team",
            "email": "team@conduit.io"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "illuminate/contracts": "^11.0",
        "illuminate/database": "^11.0",
        "illuminate/support": "^11.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "ConduitIo\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ConduitIo\\Core\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}